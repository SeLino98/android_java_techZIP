<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bottom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"/>

    <androidx.slidingpanelayout.widget.SlidingPaneLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        />
    <EditText
        android:id="@+id/post_bottom_sheet_Text"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft= "30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:maxLength="15"
        android:hint="대상을 입력해주세요"
        android:background="@drawable/post_edittext_rounded_background"
        />
    <TextView
        android:layout_marginRight="30dp"
        android:layout_marginLeft= "30dp"
        android:id="@+id/characterCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/15"
        android:layout_gravity="end"
        android:textSize="15sp"
        android:textColor="#E30E0E"/>
    <androidx.slidingpanelayout.widget.SlidingPaneLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />
    <Button
        android:id="@+id/complete_button_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:text="완료"/>

</LinearLayout>

